# =============================================================================
# INFOTEC - Configuración Automática de Laravel con Docker
# =============================================================================
# INSTRUCCIONES:
# 1. Copiar este archivo: cp .env.example .env
# 2. Ejecutar: docker compose up -d
# 3. Laravel se creará automáticamente en: http://localhost:8000
# =============================================================================

# -----------------------------------------------------------------------------
# BASE DE DATOS MARIADB
# -----------------------------------------------------------------------------
# Configuración de la base de datos que usará Laravel
MARIADB_DATABASE=infotec_laravel
MARIADB_USER=usuario_laravel
MARIADB_PASSWORD=mi_password_seguro_123
MARIADB_ROOT_PASSWORD=root_password_456

# -----------------------------------------------------------------------------
# LARAVEL - CONFIGURACIÓN DE BASE DE DATOS
# -----------------------------------------------------------------------------
# Configuración para que Laravel use MariaDB (no SQLite)
DB_CONNECTION=mysql
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=infotec_laravel
DB_USERNAME=usuario_laravel
DB_PASSWORD=mi_password_seguro_123

# -----------------------------------------------------------------------------
# LARAVEL - CONFIGURACIÓN GENERAL
# -----------------------------------------------------------------------------
# Versión de Laravel a instalar (11.* es la LTS recomendada)
LARAVEL_VERSION=11.*

# -----------------------------------------------------------------------------
# DOCKER COMPOSE
# -----------------------------------------------------------------------------
# Nombre del proyecto (prefijo para contenedores)
COMPOSE_PROJECT_NAME=infotec
