{
  "name": "Infotec (docker-compose)",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "laravel",
  "workspaceFolder": "/app",
  "runServices": [
    "mariadb",
    "laravel"
  ],
  "shutdownAction": "stopCompose",
  "forwardPorts": [
    8000
  ],
  "postCreateCommand": "echo 'Codespace listo - ejecuta: docker compose up -d'",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "felixfbecker.php-debug"
      ]
    }
  },
  "remoteUser": "1001"
}
